<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net47;netstandard2.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Json序列化支持，使用JSON.NET实现</Description>
    <Version>0.1.8</Version>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/mstmdev/Mstm.CSharp.git</RepositoryUrl>
    <PackageProjectUrl>https://github.com/mstmdev/Mstm.CSharp/tree/master/Json/Mstm.Json.Newtonsoft</PackageProjectUrl>
    <Authors>mstmdev</Authors>
    <Company>mstmdev</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Mstm.Json.Core\Mstm.Json.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
